<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:actionBarSize">@dimen/action_bar_size</item>
    </style>

    <style name="AppTheme.About" parent="AppTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/color_about_text</item>
    </style>

    <style name="AppTheme.DeviceInfo" parent="AppTheme">
        <item name="android:paddingEnd">@dimen/info_margin_horizontal</item>
        <item name="android:paddingStart">@dimen/info_margin_horizontal</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="TextViewTitle" parent="AppTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/info_title_text_size</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="TextViewContent" parent="AppTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/info_text_size</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.DeviceInfo.Content" parent="AppTheme">
        <item name="android:paddingTop">@dimen/info_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/info_padding_vertical</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <!--<item name="android:textSize">@dimen/friend_tab_text_size</item>-->
        <!--<item name="android:textColor">@color/black</item>-->
    </style>

    <style name="AppDetailTheme" parent="AppTheme">
        <item name="preferenceTheme">@style/AppTheme.Preference</item>
    </style>

    <style name="AppTheme.Preference" parent="PreferenceThemeOverlay">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/color_fab_text</item>
    </style>

</resources>
