<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/folder_icon"
        android:layout_width="@dimen/folder_icon_size"
        android:layout_height="@dimen/folder_icon_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_folder"/>

    <RadioButton
        android:id="@+id/folder_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/folder_icon"
        android:layout_toStartOf="@id/folder_check"
        android:maxLines="2"
        android:textColor="@color/folder_text_color"
        android:textSize="@dimen/folder_text_size"/>
</RelativeLayout>