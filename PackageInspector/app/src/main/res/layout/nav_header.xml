<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_size"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:padding="@dimen/nav_header_padding"
    app:theme="@style/ThemeOverlay.AppCompat.Dark"
    >

    <ImageView
        android:id="@+id/nav_header_icon"
        android:layout_width="@dimen/nav_header_icon_size"
        android:layout_height="@dimen/nav_header_icon_size"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_nav_header"/>

    <TextView
        android:id="@+id/nav_header_title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_header_icon"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="@string/action_header_title"
        />
</RelativeLayout>